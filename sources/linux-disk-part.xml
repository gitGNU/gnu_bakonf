<bakonf>
<!--
     File which contains disk partitioning informations.
-->
<metadata>
    <!-- Enable if you have IDE hdd(s) -->
    <storeoutput command="/sbin/sfdisk -d /dev/hda" destination="disks/hda.sfdisk"/>
    <!-- Enable if you have SCSI hdd(s) -->
    <!-- <storeoutput command="/sbin/sfdisk -d /dev/sda" destination="disks/sda.sfdisk"/> -->
    <!-- Use the above templates to dump partitioning information
         for other types of disks (raid, lvm, etc) -->
</metadata>
</bakonf>
