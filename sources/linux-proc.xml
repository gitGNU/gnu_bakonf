<bakonf>
<!--
     File which contains hardware related informations, mostly
     extracted from the /proc filesystem
-->
<commands>
    <!-- Proc values -->
    <storeoutput destination="proc/version">cat /proc/version</storeoutput>
    <storeoutput destination="proc/dma">cat /proc/dma</storeoutput>
    <storeoutput destination="proc/interrupts">cat /proc/interrupts</storeoutput>
    <storeoutput destination="proc/ioports">cat /proc/ioports</storeoutput>
    <storeoutput destination="proc/iomem">cat /proc/iomem</storeoutput>
    <storeoutput destination="proc/cpuinfo">cat /proc/cpuinfo</storeoutput>
    <storeoutput destination="proc/partitions">cat /proc/partitions</storeoutput>
    <!-- Also hardware information -->
    <storeoutput>lspci -vv</storeoutput>
    <storeoutput>lsusb -vv</storeoutput>
</commands>
</bakonf>
